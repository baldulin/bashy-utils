#!/bin/bash
# table -h
# Creates a little bash table from piped

rminus(){
    printf "%$1s" | sed "s/ /$2/g"
}

opt_header=0
vertical="|"
corner="+"
horizontal="-"

while getopts "hH:C:V:" a ; do
    case $a in
        "h")
            opt_header=1
            ;;
        "H")
            horizontal="$OPTARG"
            ;;
        "C")
            corner="$OPTARG"
            ;;
        "V")
            vertical="$OPTARG"
            ;;
    esac
done

fi=$(mktemp)
cols=$(tee $fi | awk '{for(i=1;i<=NF;i++)if(ar[i]<=length($i))ar[i]=length($i)}END{for(a in ar){ar[a]+=1;print ar[a]}}')

cols=(${cols})


header=$(printf "+"
for i in "${!cols[@]}" ; do
    printf "$horizontal"
    rminus "${cols[i]}" "$horizontal"
    printf "$corner"
done
printf "\n")

echo $header


cat $fi | \
while read line ; do
    i=0
    printf "$vertical"
    for a in $line ; do
        printf " %-${cols[i]}s$vertical" $a
        let i="i+1"
    done
    printf "\n"

    if [ $opt_header -eq 1 ] ; then
        echo $header
        opt_header=0
    fi
done 
echo $header 
rm $fi


